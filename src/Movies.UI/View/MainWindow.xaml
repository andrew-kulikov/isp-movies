<Window x:Class="Movies.UI.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Movies.UI.View"
        Title="Movies"
		MinWidth="320"
		MinHeight="480"
		x:Name="mainWindow">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="50"/>
			<RowDefinition />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="2.5*" MinWidth="100"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<!--Menu Grid.Row="0" Grid.ColumnSpan="2">
			<MenuItem Header="File">
				<MenuItem Header="Open" />
				<MenuItem Header="Save" />
				<MenuItem Header="Save as" />
				<MenuItem Header="New Film" Click="AddFilm_Click" />
				<MenuItem Header="Remove Film" Click="RemoveFilm_Click"/>
				<MenuItem Header="Search Film" Click="SearchFilm_Click"/>
			</MenuItem>
			<MenuItem Header="View">
				<MenuItem Header="Show Sidebar" IsCheckable="True" IsChecked="True" Click="ShowSidebar_Click"/>
			</MenuItem>

			<MenuItem Header="Help">
				<MenuItem Header="About" />
				<MenuItem Header="Close" />
				<MenuItem Header="Settings" />
			</MenuItem>
		</-->
		<StackPanel
			Grid.Row="0"
			Grid.ColumnSpan="2"
			Background="#363e45"
			Orientation="Horizontal"
			HorizontalAlignment="Stretch">
			<Button
				Width="150"
				Background="#dedede" 
				FontFamily="Verdana" 
				FontWeight="Medium" 
				FontSize="16" 
				Click="AddFilm_Click">
				<StackPanel Orientation="Horizontal">
					<Image Source="D:\git\isp-movies\src\Movies.UI\Images\plus.ico"></Image>
					<TextBlock TextWrapping="Wrap" Width="70" TextAlignment="Center" VerticalAlignment="Center">ADD FILM</TextBlock>
				</StackPanel>
			</Button>
			<Button
				Width="150"
				Background="#dedede" 
				FontFamily="Verdana" 
				FontWeight="Medium"
				FontSize="16" 
				Click="RemoveFilm_Click">
				<StackPanel Orientation="Horizontal">
					<Image Source="D:\git\isp-movies\src\Movies.UI\Images\delete.ico"></Image>
					<TextBlock TextWrapping="Wrap" Width="70" TextAlignment="Center" VerticalAlignment="Center">REMOVE FILM</TextBlock>
				</StackPanel>
			</Button>
			
		</StackPanel>
		<StackPanel
			Grid.Row="0"
			Grid.Column="1"
			Width="120"
			Margin="0 15 40 15"
			HorizontalAlignment="Right"
			Orientation="Horizontal">
			<TextBox Width="100"></TextBox>
			<Image Source="D:\git\isp-movies\src\Movies.UI\Images\find.png" />
		</StackPanel>
		<ListBox ItemsSource="{Binding Path=Films, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
				 SelectedItem="{Binding Path=SelectedFilm}"
				 Grid.Row="1"
				 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
				 x:Name="FilmListBox">
			<ListBox.ItemContainerStyle>
				<Style TargetType="ListBoxItem">
					<Setter Property="HorizontalContentAlignment" Value="Stretch"/>
					<Setter Property="VerticalContentAlignment" Value="Stretch"/>
				</Style>
			</ListBox.ItemContainerStyle>
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Image
						Source="{Binding Path=PosterPath}"
						Stretch="Uniform"
						MaxWidth="250" />
				</DataTemplate>
			</ListBox.ItemTemplate>
			<ListBox.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel	IsItemsHost="True" />
				</ItemsPanelTemplate>
			</ListBox.ItemsPanel>
		</ListBox>
		<ScrollViewer x:Name="Sidebar" Grid.Column="1" Grid.Row="1">
			<StackPanel DataContext="{Binding Path=SelectedFilm}">
				<TextBlock
					Text="{Binding Path=Name}"
					HorizontalAlignment="Center"
					FontWeight="Bold"
					FontSize="24"
					Margin="5"/>
				<Image
					Source="{Binding Path=PosterPath}"
					Stretch="Uniform"
					MaxWidth="250"/>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition />
						<ColumnDefinition />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition />
						<RowDefinition Height="Auto" />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition Height="Auto" />
						<RowDefinition />
						<RowDefinition />
					</Grid.RowDefinitions>
					<Border
						BorderBrush="DimGray"
						BorderThickness="1"
						Margin="0 5 0 0"
						Grid.Column="0"
						Grid.Row="0">
						<TextBlock Text="Year Of Release" FontSize="16" TextAlignment="Center"/>
					</Border>
					<Border
						BorderBrush="DimGray"
						BorderThickness="1"
						Margin="0 5 0 0"
						Grid.Column="1"
						Grid.Row="0">
						<TextBlock Text="{Binding Path=YearOfRelease}" FontSize="16" TextAlignment="Center" Height="Auto"/>
					</Border>
					<Border
						BorderBrush="DimGray"
						BorderThickness="1"
						Grid.Column="0"
						Grid.Row="1"
						Background="LightGray">
						<TextBlock Text="Description" FontSize="16" TextAlignment="Center"/>
					</Border>
					<Border
						BorderBrush="DimGray"
						BorderThickness="1"
						Grid.Column="1"
						Grid.Row="1"
						Background="LightGray">
						<TextBlock Text="{Binding Path=Description}" FontSize="12" TextWrapping="Wrap"/>
					</Border>
					<Border
						BorderBrush="DimGray"
						BorderThickness="1"
						Grid.Column="0"
						Grid.Row="2">
						<TextBlock Text="Rating" FontSize="16" TextAlignment="Center"/>
					</Border>
					<Border
						BorderBrush="DimGray"
						BorderThickness="1"
						Grid.Column="1"
						Grid.Row="2">
						<TextBlock Text="{Binding Path=Rating}" FontSize="16" TextAlignment="Center"/>
					</Border>
					<Border
						BorderBrush="DimGray"
						BorderThickness="1"
						Grid.Column="0"
						Grid.Row="3"
						Background="LightGray">
						<TextBlock Text="Genres" FontSize="16" TextAlignment="Center"/>
					</Border>
					<Border
						BorderBrush="DimGray"
						BorderThickness="1"
						Grid.Column="1"
						Grid.Row="3"
						Background="LightGray">
						<TextBlock Text="{Binding Path=Genres}" FontSize="16" TextWrapping="Wrap" TextAlignment="Center"/>
					</Border>
					<Border
						BorderBrush="DimGray"
						BorderThickness="1"
						Grid.Column="0"
						Grid.Row="4">
						<TextBlock Text="Actors" FontSize="16" TextAlignment="Center"/>
					</Border>
					<Border
						BorderBrush="DimGray"
						BorderThickness="1"
						Grid.Column="1"
						Grid.Row="4">
						<ListBox x:Name="ActorsListBox" ItemsSource="{Binding Path=Actors}" SelectedItem="{Binding Path=SelectedActor}" MouseLeftButtonUp="ClearSelectedItem">
							<ListBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Path=FullName}"/>
								</DataTemplate>
							</ListBox.ItemTemplate>
						</ListBox>
					</Border>
					<Border
						BorderBrush="DimGray"
						BorderThickness="1"
						Grid.Column="0"
						Grid.Row="5"
						Background="LightGray">
						<TextBlock Text="Producer" FontSize="16" TextAlignment="Center"/>
					</Border>
					<Border
						BorderBrush="DimGray"
						BorderThickness="1"
						Grid.Column="1"
						Grid.Row="5"
						Background="LightGray">
						<TextBlock Text="{Binding Path=ProducerName}" FontSize="16" TextAlignment="Center"/>
					</Border>
				</Grid>
			</StackPanel>
		</ScrollViewer>
	</Grid>
</Window>
