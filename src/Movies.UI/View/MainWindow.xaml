<Window x:Class="Movies.UI.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Movies.UI.View"
        mc:Ignorable="d"
        Title="MainWindow">
	<Grid ShowGridLines="True">
		<Grid.RowDefinitions>
			<RowDefinition Height="20"/>
			<RowDefinition />
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0" Orientation="Horizontal" Background="LightGray">
			<Button Width="60">File</Button>
			<Button Width="60">View</Button>
			<Button Width="60">Add</Button>
			<Button Width="60">Change</Button>
			<Button Width="60">Help</Button>
		</StackPanel>
		<ListBox Grid.Row="1" BorderBrush="Black" BorderThickness="1">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Border Margin="5" BorderThickness="1" BorderBrush="SteelBlue" CornerRadius="4" Width="370">
						<Button Height="200" Width="200">sdgfdg</Button>
					</Border>
				</DataTemplate>
			</ListBox.ItemTemplate>
			<ListBox.ItemsPanel>
				<ItemsPanelTemplate>
					<UniformGrid Columns="3" IsItemsHost ="True"></UniformGrid>
				</ItemsPanelTemplate>
			</ListBox.ItemsPanel>
		</ListBox>
	</Grid>
</Window>
