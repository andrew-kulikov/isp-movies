<Window x:Class="Movies.UI.View.AddFilm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddFilm" Height="400" Width="300" MinHeight="400"  MinWidth="300">
	<Grid Margin="0 0 10 0">
		<Grid.RowDefinitions>
			<RowDefinition Height="20"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<TextBlock
			Grid.Row="0"
			Grid.ColumnSpan="2"
			HorizontalAlignment="Center">Add Film</TextBlock>
		<TextBlock
			Grid.Row="1" 
			Grid.Column="0" 
			HorizontalAlignment="Center" 
			Margin="0 5 0 0">Film name</TextBlock>
		<TextBox 
			Grid.Row="1" 
			Grid.Column="1" 
			Margin="0 5 0 0" 
			Text="{Binding Path=NewFilm.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
		<TextBlock 
			Grid.Row="2" 
			HorizontalAlignment="Center"
			Margin="0 5 0 0">Rating</TextBlock>
		<TextBox 
			Grid.Row="2"
			Grid.Column="1" 
			Margin="0 5 0 0" 
			Text="{Binding Path=NewFilm.Rating, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
		<TextBlock 
			Grid.Row="3"
			HorizontalAlignment="Center"
			Margin="0 5 0 0">Age limit</TextBlock>
		<ComboBox 
			Grid.Row="3" 
			Grid.Column="1" 
			x:Name="AgeBox" 
			Margin="0 5 0 0"
			SelectedItem="{Binding Path=NewFilm.AgeLimit, Mode=TwoWay}"></ComboBox>
		<TextBlock 
			Grid.Row="4"
			HorizontalAlignment="Center" 
			Margin="0 5 0 0">Year of release</TextBlock>
		<ComboBox
			Grid.Row="4"
			Grid.Column="1" 
			x:Name="YearBox" 
			Margin="0 5 0 0"
			SelectedItem="{Binding Path=NewFilm.YearOfRelease, Mode=TwoWay}"></ComboBox>
		<TextBlock 
			Grid.Row="5" 
			Grid.Column="0" 
			HorizontalAlignment="Center" 
			Margin="0 5 0 0">Description</TextBlock>
		<ScrollViewer Grid.Row="5" Grid.Column="1">
			<TextBox
				Margin="0 5 0 0"
				Height="50"
				Text="{Binding Path=NewFilm.Description, Mode=TwoWay}"></TextBox>
		</ScrollViewer>
		<StackPanel
			Grid.Row="6" 
			Grid.Column="0" 
			HorizontalAlignment="Center" 
			VerticalAlignment="Center">
			<CheckBox Margin="0 5 5 5" IsChecked="{Binding Path=GenresDict[Comedy]}">Comedy</CheckBox>
			<CheckBox Margin="0 5 5 5">Vestern</CheckBox>
			<CheckBox Margin="0 5 5 5">Horror</CheckBox>
			<CheckBox Margin="0 5 5 5">Documental</CheckBox>
		</StackPanel>
		<StackPanel Grid.Row="6" Grid.Column="1">
			<CheckBox Margin="0 5 5 5">Sci-Fi</CheckBox>
			<CheckBox Margin="0 5 5 5">War</CheckBox>
			<CheckBox Margin="0 5 5 5">Action</CheckBox>
			<CheckBox Margin="0 5 5 5">Animation</CheckBox>
		</StackPanel>
		<TextBlock Grid.Row="7" HorizontalAlignment="Center">Actors</TextBlock>
		<Button Grid.Row="7" Grid.Column="1">Add actors</Button>
		<TextBlock Grid.Row="8" HorizontalAlignment="Center">Producer</TextBlock>
		<Button Grid.Row="8" Grid.Column="1">Add producer</Button>
	</Grid>
</Window>
