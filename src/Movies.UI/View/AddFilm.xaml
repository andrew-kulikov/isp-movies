<Window x:Class="Movies.UI.View.AddFilm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Movies.UI.View"
        mc:Ignorable="d"
        Title="AddFilm" Height="300" Width="300">
    <Grid>
		<StackPanel>
			<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Add Film</TextBlock>
			<UniformGrid Rows="1" Columns="2" Margin="5">
				<TextBlock HorizontalAlignment="Center">Film name</TextBlock>
				<TextBox></TextBox>
			</UniformGrid>
			<UniformGrid Rows="1" Columns="2" Margin="5">
				<TextBlock HorizontalAlignment="Center">Path to poster</TextBlock>
				<TextBox></TextBox>
			</UniformGrid>
		</StackPanel>
    </Grid>
</Window>
